@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    string bg_img = "https://learn.microsoft.com/en-us/media/home-and-directory/featured-training_dark.jpg?branch=live";
}
<h1>@ViewData["Title"]</h1>
@* <img src=@bg_img alt="Login" width="200px" height="100px"> HERE </img> *@
<p> Use this page to detail your site's privacy policy</p>
@* <p style="background-image: url(@bg_img)">Use this page to detail your site's privacy policy.</p> *@
@{
    if (HttpMethods.IsPost("username")) { 
        string username = Request.Form["username"]; 
        string password = Request.Form["password"]; 
        <p>You entered: <br> 
        Company Name: @username <br> 
        Contact Name: @password </p> 
    } else {
        <form method="post" action="">
        Username:<br> 
        <input type="text" name="username" value="" placeholder="username"><br>
        Password:<br>
        <input type="password" name="password" value="" placeholder="password"><br><br>
        <input type="submit" value="Submit" class="submit">
        </form> 
    }
}
